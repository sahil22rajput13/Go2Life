<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clBackground"
    android:layout_width="match_parent"
    android:background="#222196F3"
    android:layout_margin="3dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivCircleImage"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_margin="5dp"
        android:background="@drawable/job_img1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNotification"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:paddingBottom="20dp"
        android:text="Testing"
        app:layout_constraintBottom_toBottomOf="@id/ivCircleImage"
        app:layout_constraintLeft_toRightOf="@id/ivCircleImage"
        app:layout_constraintRight_toLeftOf="@id/tvTime"
        app:layout_constraintTop_toTopOf="@id/ivCircleImage" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/poppins_medium"
        android:text="1 hr ago"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/tvNotification"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvNotification"
        />
</androidx.constraintlayout.widget.ConstraintLayout>